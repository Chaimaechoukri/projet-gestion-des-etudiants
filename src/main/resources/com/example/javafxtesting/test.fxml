<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<VBox fx:id="loginPane" alignment="CENTER" spacing="20" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml">
    <!-- Logo and Title -->
    <VBox alignment="CENTER">
        <ImageView fx:id="logo" fitWidth="100" fitHeight="50" />
        <Text text="ADMIN" styleClass="title-text"/>
    </VBox>

    <!-- Login Form -->
    <VBox alignment="CENTER_LEFT" spacing="10">
        <!-- Username Field -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Username" />
            <TextField fx:id="usernameField" />
        </HBox>
        <!-- Password Field -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Password" />
            <PasswordField fx:id="passwordField" />
            <Hyperlink text="Forgotten password?" styleClass="link-text"/>
        </HBox>
    </VBox>

    <!-- Login Button -->
    <Button fx:id="loginButton" text="LOGIN" styleClass="login-button"/>
</VBox>
